{
  "testEnvironment": "node",
  "testMatch": [
    "**/test/**/*.test.js",
    "**/?(*.)+(spec|test).js"
  ],
  "collectCoverageFrom": [
    "src/**/*.js",
    "!src/index.js",
    "!**/node_modules/**"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": [
    "text",
    "lcov",
    "html"
  ],
  "testTimeout": 30000,
  "setupFilesAfterEnv": [
    "<rootDir>/test/setup.js"
  ]
}